<resources>
    <declare-styleable name="ResizableKeyboardLayout">
        <attr name="viewToHideWhenActivated" format="reference" />
    </declare-styleable>

    <declare-styleable name="AnimatedProgressBar">
        <attr name="wrapShiftDrawable" format="boolean" />
        <attr name="shiftDuration" format="reference" />
        <attr name="shiftInterpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="spacing" format="integer" />
    </declare-styleable>

    <declare-styleable name="EqualDistributeGrid">
        <attr name="horizontalCapacity" format="integer" />
        <attr name="verticalGutter" format="integer" />
    </declare-styleable>

    <declare-styleable name="TabCounter">
        <attr name="drawableColor" format="color" />
    </declare-styleable>

    <declare-styleable name="NightMode">
        <attr name="state_night" format="boolean"/>
    </declare-styleable>
</resources>