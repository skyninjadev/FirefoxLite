<resources>

    <attr name="toolBarAppearance" format="reference" />
    <attr name="siteIdentityAppearance" format="reference" />
    <attr name="displayUrlAppearance" format="reference" />

    <attr name="colorProgressBarStartGradient" format="color" />
    <attr name="colorProgressBarEndGradient" format="color" />

    <style name="ToolBarStyle">
        <item name="android:background">@drawable/toolbar_background</item>
    </style>

    <style name="ToolBarPrivateStyle">
        <item name="android:background">#38383D</item>
    </style>

    <style name="SiteIdentityStyle">
        <item name="android:src">@drawable/site_identity</item>
    </style>

    <style name="SiteIdentityPrivateStyle">
        <item name="android:src">@drawable/site_identity_private</item>
    </style>

    <style name="DisplayUrlStyle">
        <item name="android:textColor">@color/url_bar_text</item>
    </style>

    <style name="DisplayUrlPrivateStyle" parent="DisplayUrlStyle">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
