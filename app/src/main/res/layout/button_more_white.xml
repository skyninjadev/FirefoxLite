<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainMenuButton">

    <org.mozilla.rocket.nightmode.themed.ThemedImageButton
        android:id="@+id/btn_menu_home"
        style="@style/MainMenuButton"
        android:layout_centerInParent="true"
        android:src="@drawable/action_menu"
        android:tint="@color/home_bottom_button" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/downloading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        app:lottie_fileName="notify_downloading_invert.json"
        app:lottie_loop="true" />

    <ImageView
        android:id="@+id/download_unread_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/notify_download"
        android:tint="@color/paletteWhite100"
        android:visibility="gone" />
</RelativeLayout>